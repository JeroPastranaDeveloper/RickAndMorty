<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RickAndMorty" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/black_white</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="Base.Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textColorHint">@color/login_hint</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.RickAndMorty.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashlogo</item>
        <item name="postSplashScreenTheme">@style/Theme.RickAndMorty</item>
    </style>

    <style name="style_text_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="style_text_character_view_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:titleMarginTop">@dimen/small_padding</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="style_text_episodes_view_holder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>